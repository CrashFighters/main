{
    "generic": {
        "websiteUrl": "localhost",
        "port": "80",
        "lang": [
            "en",
            "nl"
        ],
        "path": {
            "files": {
                "messages": "./messages/",
                "api": "./api/",
                "errors": "./logs/errors/",
                "files": "./publicFiles",
                "errorFile": "{files}/error/general/index.html",
                "reloadingFile": "{files}/error/reloading/index.html",
                "modules": "./modules/",
                "moduleApi": "{modules}{name}/api/",
                "noError": ".noError",
                "extraDependencies": "extraDependencies.json"
            },
            "online": {
                "api": "/api/"
            }
        }
    },
    "minimalScores": {
        "login": 0.7,
        "signup": 0.8,
        "postFlagged": 0.5,
        "postHidden": 0.8
    },
    "permissions": {
        "roles": {
            "empty": {
                "_other": "never",
                "privateFiles": "never",
                "database": {
                    "get": {
                        "community": "never",
                        "post": "never",
                        "vote": "never"
                    },
                    "delete": {
                        "community": "never",
                        "post": "never",
                        "vote": "never"
                    },
                    "modify": {
                        "community": "never",
                        "post": "never",
                        "vote": "never"
                    },
                    "create": {
                        "community": "never",
                        "post": "never",
                        "vote": "never"
                    }
                },
                "dashboard": {
                    "getUserFrom": {
                        "email": "never",
                        "phoneNumber": "never"
                    }
                },
                "user": {
                    "delete": "never"
                }
            },
            "default": {
                "database": {
                    "get": "always"
                },
                "user": {
                    "delete": "ifOwner"
                }
            },
            "authenticated": {
                "database": {
                    "get": "always",
                    "delete": "ifOwner",
                    "modify": "ifOwner",
                    "create": "always"
                },
                "user": {
                    "delete": "ifOwner"
                }
            }
        },
        "customRoles": {
            "support": {
                "privateFiles": {
                    "dashboard": "always"
                },
                "dashboard": {
                    "getUserFrom": {
                        "email": "always",
                        "phoneNumber": "always"
                    }
                },
                "user": {
                    "delete": "always"
                }
            },
            "admin": "always"
        }
    }
}