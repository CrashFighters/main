{
    "generic": {
        "websiteUrl": "localhost",
        "port": "80",
        "lang": [
            "en",
            "nl"
        ],
        "path": {
            "files": {
                "messages": "./messages/",
                "api": "./api/",
                "errors": "./logs/errors/",
                "files": "./files",
                "errorFile": "{files}/error/general/index.html",
                "reloadingFile": "{files}/error/reloading/index.html",
                "modules": "./modules/",
                "moduleApi": "{modules}{name}/api/",
                "noError": ".noError",
                "extraDependencies": "extraDependencies.json"
            },
            "online": {
                "api": "/api/"
            }
        }
    },
    "permissions": {
        "roles": {
            "default": {
                "database": {
                    "get": {
                        "community": "always",
                        "post": "always",
                        "vote": "always"
                    }
                }
            },
            "loggedIn": {
                "database": {
                    "get": {
                        "community": "always",
                        "post": "always",
                        "vote": "always"
                    },
                    "delete": {
                        "community": "ifOwner",
                        "post": "ifOwner",
                        "vote": "ifOwner"
                    },
                    "modify": {
                        "community": "ifOwner",
                        "post": "ifOwner",
                        "vote": "ifOwner"
                    },
                    "create": {
                        "community": "always",
                        "post": "always",
                        "vote": "always"
                    }
                }
            },
            "full": {
                "database": {
                    "get": {
                        "community": "always",
                        "post": "always",
                        "vote": "always"
                    },
                    "delete": {
                        "community": "always",
                        "post": "always",
                        "vote": "always"
                    },
                    "modify": {
                        "community": "always",
                        "post": "always",
                        "vote": "always"
                    },
                    "create": {
                        "community": "always",
                        "post": "always",
                        "vote": "always"
                    }
                }
            }
        }
    }
}